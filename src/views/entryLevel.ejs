<% include ('layouts/header.ejs') %>
	<div class="table-wrapper">
		<% if (schools.length > 0) { %>
			<h2>School information and early career pays</h2>
			<table class="table table-hovered">
				<thead class="thead-dark">
					<tr>
						<td>School Name</td>
						<td>Early Career Pay ($)</td>
					</tr>
				</thead>
				<tbody>
					<% schools.forEach((schools, index) => { %>
						<tr>
							<td><%=schools.name %></td>
							<td><%=schools.early_career_pay %></td>
						</tr>
					<% }) %>
				</tbody>
			</table>
		<% } else { %>
			<p class="text-center">No schools found.</p>
		<% } %>
	</div>
</div>
</body>
</html>